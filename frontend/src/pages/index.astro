    function countFiles(nodes) {
      let files = 0;
      let directories = 0;
      
      for (const node of nodes) {
        if (node.type === 'file') {
          files++;
        } else if (node.type === 'directory') {
          directories++;
          if (node.children) {
            const childCounts = countFiles(node.children);
            files += childCounts.files;
            directories += childCounts.directories;
          }
        }
      }
      
      return { files, directories };
